<form action="/aircount/square" method ="post">


<div class="form-group">
    <label for="exampleInputEmail1">Объект</label>
    <input type="text" class="form-control"  placeholder="Название объекта" name ="object" value = <%= @object %>>
    <small id="emailHelp" class="form-text text-muted">Введите наименование объекта</small>

  </div>


    <div class="form-group">
    <label for="exampleInputEmail1">Помещение</label>
    <input type="text" class="form-control"  placeholder="Помещение" name ="room" value = <%= @room %>>
    <small id="emailHelp" class="form-text text-muted">Введите название помещения или номер комнаты</small>

  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">Точка замера</label>
    <input type="text" class="form-control"  placeholder="Точка замера" name ="spot" value = <%= @spot %>>
    <small id="emailHelp" class="form-text text-muted">Введите номер решетки или другой идетнификатор</small>

  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Сторона 1</label>
    <input type="text" class="form-control"  placeholder="СЕЧЕНИЕ" name ="side1" value = <%= @side1 %>>
    <small id="emailHelp" class="form-text text-muted">В миллиметрах.</small>

  </div>

    <div class="form-group">
    <label for="exampleInputEmail1">Сторона 2</label>
    <input type="text" class="form-control"  placeholder="СЕЧЕНИЕ" name ="side2" value = <%= @side2 %>>
    <small id="emailHelp" class="form-text text-muted">В миллиметрах.</small>

  </div>


  <div class="form-group">
    <label for="exampleInputEmail1">Скорость потока воздуха</label>
    <input type="text" class="form-control"  placeholder="СКОРОСТЬ" name ="speed" value = <%= @speed %>>
    <small id="emailHelp" class="form-text text-muted">В метрах в секунду</small>
  </div>
  
  <button type="submit" class="btn btn-primary">РАСЧИТАТЬ</button>


</form>



